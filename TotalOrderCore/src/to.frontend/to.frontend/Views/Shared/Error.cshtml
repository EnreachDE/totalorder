<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body>
    <hgroup>
        <h1>Error.</h1>
        <h2>An error occurred while processing your request.</h2>
        @{
            if (TempData["Exception"] != null)
            {
                <pre>
                    @((Exception)TempData["Exception"]).StackTrace
                </pre>
                <pre>
                    @TempData["Model"]
                </pre>
            }
        }
    </hgroup>
</body>
</html>
